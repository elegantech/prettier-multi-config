{
  "trailingComma": "es5",
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "arrowParens": "always",
  "printWidth": 120,
  "endOfLine": "lf",
  "organizeImportsSkipDestructiveCodeActions": true,
  "multilineArraysWrapThreshold": 1,
  "plugins": [
    "prettier-plugin-pkg",
    "prettier-plugin-organize-imports",
    "prettier-plugin-sh",
    "prettier-plugin-multiline-arrays"
  ],
  "overrides": [
    {
      "files": [
        "*.sh"
      ],
      "options": {
        "indent": 4,
        "tabWidth": 4
      }
    },
    {
      "files": [
        ".prettierrc.json"
      ],
      "options": {
        "printWidth": 80
      }
    }
  ]
}
